<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.holacampus.api.mappers.CommentContainerMapper">
    
    <resultMap id="ccResult" type="CommentContainer">
        <id column="cc_id" property="id" />
        <result column="cc_content" property="content" /> 
    </resultMap>
    
    <select id="getAllUsers" parameterType="int" resultType="CommentContainer">
        select CommentContainerID as id, Content as content from comment_container
            where id = #{id}
    </select>
    
    <insert id="createCommentContainer" parameterType="map" useGeneratedKeys="true" keyProperty="cc.id">
        insert into comment_container (Content)
        values( #{cc.content})
    </insert>
</mapper>